<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen"
    app:navGraph="@navigation/nav_graph">

    <TextView
        android:id="@+id/firstHomeText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_Text_Home"
        android:text="@string/firstStr"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_Home_Size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstHomeText"
        app:srcCompat="@drawable/screen" />

    <TextView
        android:id="@+id/secondHomeText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_Text_Home"
        android:text="@string/secondStr"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_Home_Size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeImage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/firstNavigationButton"
        android:text="@string/button1"
        style="@style/Navigation_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondHomeText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/secondNavigationButton"
        style="@style/Navigation_Button"
        android:text="@string/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNavigationButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/thirdNavigationButton"
        style="@style/Navigation_Button"
        android:text="@string/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondNavigationButton" />

</androidx.constraintlayout.widget.ConstraintLayout>