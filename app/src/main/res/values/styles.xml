    <style name="Hide_Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/layout_width_HideButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_HideButton</item>
